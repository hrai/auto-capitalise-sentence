{
  "name": "auto-capitalise-extension",
  "title": "Auto Capitalise Extension",
  "version": "2.0.0",
  "description": "Firefox add-on to automatically capitalise the first letter of a sentence while typing.",
  "scripts": {
    "build": "browserify src/*.js -o lib/bundle.js -t [ babelify --presets [ @babel/preset-env  ] --plugins [ @babel/plugin-proposal-class-properties  ] ] ",
    "web-ext-win": "yarn web-ext run --verbose --firefox='/mnt/c/Program Files/Firefox Developer Edition/firefox.exe'",
    "watch": "watchify src/*.js -o lib/bundle.js -t [ babelify --presets [ @babel/preset-env  ] --plugins [ @babel/plugin-proposal-class-properties  ] ]",
    "web-ext-linux": "yarn web-ext run",
    "test": "jest test/",
    "test-watch": "jest --watch test/",
    "lint": "eslint .",
    "lint-fix": "eslint --fix .",
    "version": "dot-json distribution/manifest.json version $VER",
    "start:firefox": "web-ext run"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/preset-env": "^7.9.0",
    "babel-jest": "^26.5.2",
    "babelify": "^10.0.0",
    "browserify": "^17.0.0",
    "daily-version": "^2.0.0",
    "dot-json": "^1.2.1",
    "eslint": "^7.11.0",
    "husky": "^4.3.0",
    "jest": "^24.9.0",
    "jquery": "^3.5.1",
    "lint-staged": "^10.4.0",
    "sinon": "^7.5.0",
    "watchify": "^3.11.1",
    "web-ext": "^5.2.0",
    "webextension-polyfill": "^0.6.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hrai/auto-capitalise"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hrai/auto-capitalise/issues"
  },
  "keywords": [
    "webextensions",
    "auto-capitalise"
  ],
  "homepage": "https://github.com/hrai/auto-capitalise",
  "dependencies": {
    "babel-eslint": "^10.1.0"
  }
}
